<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
         https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <display-name>eSports Team Management System</display-name>
    <description>Professional Tournament and Team Management Platform for eSports</description>

    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Servlet Mapping (backup for annotation-based mapping) -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.esports.web.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.esports.web.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TeamServlet</servlet-name>
        <servlet-class>com.esports.web.TeamServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TeamServlet</servlet-name>
        <url-pattern>/team</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TeamServlet</servlet-name>
        <url-pattern>/teams</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PlayerServlet</servlet-name>
        <servlet-class>com.esports.web.PlayerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PlayerServlet</servlet-name>
        <url-pattern>/player</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlayerServlet</servlet-name>
        <url-pattern>/players</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MatchServlet</servlet-name>
        <servlet-class>com.esports.web.MatchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MatchServlet</servlet-name>
        <url-pattern>/match</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MatchServlet</servlet-name>
        <url-pattern>/matches</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.esports.web.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TournamentServlet</servlet-name>
        <servlet-class>com.esports.web.TournamentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TournamentServlet</servlet-name>
        <url-pattern>/tournament</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TournamentServlet</servlet-name>
        <url-pattern>/tournaments</url-pattern>
    </servlet-mapping>

    <!-- Session Configuration -->
    <session-config>
        <tracking-mode>COOKIE</tracking-mode>
        <cookie-config>
            <secure>false</secure>
            <http-only>true</http-only>
        </cookie-config>
        <timeout>30</timeout>
    </session-config>

    <!-- MIME Type Mappings -->
    <mime-mapping>
        <extension>css</extension>
        <mime-type>text/css</mime-type>
    </mime-mapping>

    <mime-mapping>
        <extension>js</extension>
        <mime-type>application/javascript</mime-type>
    </mime-mapping>

</web-app>
